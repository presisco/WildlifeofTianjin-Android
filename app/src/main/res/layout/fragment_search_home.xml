<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wildlifeoftianjin.ui.fragment.SearchFragment">

    <RelativeLayout
        android:id="@+id/topBar"
        style="@style/Layout.TopBar">

        <SearchView
            android:id="@+id/searchView"
            style="@android:style/Widget.Material.Light.SearchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textFilter"
            tools:style="@style/Layout.TopBar.Item" />

        <TextView
            android:id="@+id/textFilter"
            style="@style/Layout.TopBar.Title"
            android:layout_alignParentRight="true"
            android:onClick="onFilter"
            android:text="@string/filter"
            android:textAppearance="@style/Text.Normal.Label" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/searchResultPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
