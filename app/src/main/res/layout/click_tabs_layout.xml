<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/click_tabs_scroll"
        android:layout_alignParentTop="true" />

    <com.wildlifeoftianjin.UI.Frame.ClickTabsLayout.ClickTabsContainer
        android:id="@+id/click_tabs_scroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/click_tabs_layout_tabs_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/click_tabs_layout_tabs_default_background_color"
        android:fillViewport="false" />

</RelativeLayout>